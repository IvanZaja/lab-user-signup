<h1>Create a user</h1>

<form action="/signup" method="POST" enctype="application/x-www-form-urlencoded">

    <div class="input-group mb-1">
        <label class="input-group-text">name</label>
        <input type="text" class="form-group" name="name"/>
    </div>

    <div class="input-group mb-1">
        <label class="input-group-text">Edad</label>
        <input type="number" class="form-group" name="age"/>
    </div>

    <div class="input-group mb-1">
        <label class="input-group-text">Email</label>
        <input type="email" class="form-group" name="email"/>
    </div>
    <div class="input-group mb-1">
        <label class="input-group-text">Password</label>
        <input type="password" class="form-group" name="password"/>
    </div>
  
    <button type="submit" class="btn btn-primary" class="my-3">Done</button>
</form>